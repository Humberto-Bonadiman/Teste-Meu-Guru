{
  "name": "teste-meu-guru-back-end",
  "version": "1.0.0",
  "description": "",
  "main": "src/index.ts",
  "prisma": {
    "seed": "ts-node prisma/seed.ts"
  },
  "scripts": {
    "start": "sudo service postgresql stop && docker-compose up -d && nodemon --watch 'src/' --exec 'ts-node src/index.ts' -e ts",
    "seed": "npx prisma generate && npx prisma migrate dev && ts-node prisma/seed.ts",
    "dev": "nodemon --watch 'src/' --exec 'ts-node src/index.ts' -e ts",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix",
    "stop": "sudo service postgresql stop",
    "compose-up": "docker-compose up -d",
    "compose-down": "docker-compose down",
    "test-int": "npm run compose-up && npm run seed && npx prisma migrate dev --name init && mocha -r ts-node/register ./src/tests/*$NAME*.{test,spec}.ts -t 10000 --exit",
    "test": "npm run seed && mocha -r ts-node/register ./src/tests/*$NAME*.{test,spec}.ts -t 10000 --exit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@prisma/client": "^3.14.0",
    "@types/chai": "^4.3.1",
    "@types/cors": "^2.8.12",
    "chai-http": "^4.3.0",
    "cors": "^2.8.5",
    "express": "^4.18.1",
    "sinon": "^14.0.0",
    "ts-sinon": "^2.0.2"
  },
  "devDependencies": {
    "@testdeck/mocha": "^0.2.0",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.1",
    "@types/node": "^17.0.33",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "chai": "^4.3.6",
    "eslint": "^8.15.0",
    "jest": "^28.1.0",
    "jest-mock-extended": "^2.0.4",
    "mocha": "^10.0.0",
    "mocha-typescript": "^1.1.17",
    "nodemon": "^2.0.16",
    "prisma": "^3.14.0",
    "ts-node": "^10.7.0",
    "typescript": "^4.6.4",
    "uuid": "^8.3.2"
  }
}
